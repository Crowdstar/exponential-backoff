{
    "name": "crowdstar/exponential-backoff",
    "description": "Prevent overloading an unavailable service by doubling the timeout each iteration.",
    "homepage": "https://www.glu.com",
    "license": "Apache-2.0",
    "require": {
        "php": ">=7.1"
    },
    "require-dev": {
        "crowdstar/reflection": "~1.0.0 || ~2.0.0",
        "phpunit/phpunit": "~7.0 || ~8.0 || ~9.0",
        "swoole/ide-helper": "~5.0"
    },
    "suggest": {
        "ext-swoole": "Allow to do exponential backoff in non-blocking mode in Swoole"
    },
    "autoload": {
        "psr-4": {
            "CrowdStar\\Backoff\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "CrowdStar\\Tests\\Backoff\\": "tests/unit"
        }
    }
}
